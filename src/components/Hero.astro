---
import heroImage from '../assets/hero.jpg';
---

<section id="welcome" class="relative min-h-screen flex items-center justify-center overflow-hidden scroll-mt-32">
  <div
    class="absolute inset-0 z-0 hero-bg"
    style={{ backgroundImage: `url(${heroImage.src})` }}
  >
    <div class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/60 to-black/70"></div>
  </div>

  <div class="relative z-10 container mx-auto px-4 sm:px-6 text-center pt-20">
    <div class="animate-slide-up">

      <h1 class="text-4xl sm:text-6xl md:text-8xl font-bold mb-4 sm:mb-6 tracking-tight">
        <span class="text-white">PANTHER</span>
        <br />
        <span class="text-pink-400">DIAMONDS</span>
      </h1>

      <p class="text-xl sm:text-2xl md:text-3xl text-gray-300 mb-6 sm:mb-8 max-w-3xl mx-auto font-light leading-relaxed px-4">
        Madison Avenue Quality.  Diamond District Prices.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center px-4">
        <a
          href="#faq"
          class="w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 bg-gradient-to-r from-pink-500 to-rose-600 text-white font-semibold rounded-full hover:scale-105 transition-transform duration-300 shadow-lg shadow-pink-500/30 text-center"
        >
          Details
        </a>
        <a
          href="mailto:sales@pantherdiamonds.com?subject=Ring%20required%2C%20need%20price%20quotation"
          class="w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 border-2 border-pink-500 text-pink-400 font-semibold rounded-full hover:bg-pink-500/10 transition-colors duration-300 text-center"
        >
          Contact Us
        </a>
      </div>
    </div>
  </div>

  <!-- <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce hidden sm:block">
    <div class="w-6 h-10 border-2 border-pink-500 rounded-full flex items-start justify-center p-2">
      <div class="w-1.5 h-1.5 bg-pink-500 rounded-full"></div>
    </div>
  </div> -->
</section>
