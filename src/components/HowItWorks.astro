---
import { Send, Mail, Package } from 'lucide-astro';

const steps = [
  {
    number: '01',
    title: 'SHOP FOR YOUR RING',
    description: 'Locate the exact ring you want - the perfect setting and stone.  Send us all the details, including your lowest negotiated price, and any certifications your stone comes with.  A photo of the store’s merchandising tag is required.',
    icon: Send,
  },
  {
    number: '02',
    title: 'WE EMAIL YOU A QUOTE.',
    description: 'If we have no questions, we’ll email you a price quote.',
    icon: Mail,
  },
  {
    number: '03',
    title: 'WE MAKE YOUR RING',
    description: 'After you send us a 20% deposit, we make your ring.  You will receive CAD Design images to approve.',
    icon: Package,
  },
];
---

<section id="how-it-works" class="py-12 sm:py-24 bg-gradient-to-b from-black via-gray-900 to-black relative overflow-hidden scroll-mt-32">
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-20 left-10 w-72 h-72 bg-pink-500 rounded-full filter blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-rose-600 rounded-full filter blur-3xl"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 relative z-10">
    <div class="text-center mb-12 sm:mb-20 animate-slide-up">
      <h2 class="text-3xl sm:text-5xl md:text-6xl font-bold mb-4 sm:mb-6">
        <span class="text-white">How It</span> <span class="text-primary">Works</span>
      </h2>
      <p class="text-xl sm:text-2xl md:text-3xl text-gray-400 max-w-2xl mx-auto font-light leading-relaxed px-4">
        <span class="sm:whitespace-nowrap">You’re gonna do this once, so we make it easy.</span><br>Your engagement ring in 3 easy steps.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8 max-w-7xl mx-auto">
      {steps.map((step, index) => {
        const Icon = step.icon;
        return (
          <div
            class="group relative animate-scale-in"
            style={`animation-delay: ${index * 0.2}s`}
          >
            <div class="bg-gradient-to-br from-gray-800 to-gray-900 border border-pink-500/20 rounded-2xl p-6 sm:p-8 h-full hover:border-pink-500/50 transition-all duration-500 hover:transform hover:scale-105 hover:shadow-2xl hover:shadow-pink-500/20">
              <div class="flex items-start justify-between mb-4 sm:mb-6">
                <span class="text-4xl sm:text-6xl font-bold text-transparent bg-gradient-to-br from-pink-500/30 to-rose-600/30 bg-clip-text group-hover:from-pink-500 group-hover:to-rose-600 transition-all duration-300">
                  {step.number}
                </span>
                <div class="w-12 h-12 sm:w-16 sm:h-16 rounded-full bg-gradient-to-br from-pink-500 to-rose-600 flex items-center justify-center">
                  <Icon class="w-6 h-6 sm:w-8 sm:h-8 text-white" />
                </div>
              </div>

              <h3 class="text-lg sm:text-2xl font-bold text-white mb-3 sm:mb-4 tracking-wide">
                {step.title}
              </h3>

              <p class="text-sm sm:text-base text-gray-400 leading-relaxed font-light">
                {step.description}
              </p>
            </div>

            {index < steps.length - 1 && (
              <div class="hidden md:block absolute top-1/2 -right-4 transform -translate-y-1/2 z-20">
                <div class="w-8 h-0.5 bg-gradient-to-r from-pink-500 to-transparent"></div>
              </div>
            )}
          </div>
        );
      })}
    </div>

    <div class="text-center mt-12 sm:mt-16 animate-fade-in">
      <a
        href="mailto:sales@pantherdiamonds.com?subject=Ring%20required%2C%20need%20price%20quotation"
        class="inline-flex items-center px-6 sm:px-10 py-4 sm:py-5 bg-gradient-to-r from-pink-500 to-rose-600 text-white text-base sm:text-lg font-semibold rounded-full hover:scale-105 transition-transform duration-300 shadow-xl shadow-pink-500/30"
      >
        <Mail class="w-5 h-5 sm:w-6 sm:h-6 mr-2 sm:mr-3" />
        Get A Quote
      </a>
    </div>
  </div>
</section>
