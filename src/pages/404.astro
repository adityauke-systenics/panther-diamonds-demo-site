---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Header />
  
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-32 pb-20">
    <div class="absolute inset-0 bg-black"></div>
    
    <div class="relative z-10 container mx-auto px-4 sm:px-6 text-center">
      <div class="animate-slide-up">
        <h1 class="text-6xl sm:text-8xl md:text-9xl font-bold mb-4 sm:mb-6 tracking-tight">
          <span class="bg-gradient-to-r from-pink-500 to-rose-600 bg-clip-text text-transparent">404</span>
        </h1>
        
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-4 sm:mb-6 text-white">
          Page Not Found
        </h2>
        
        <p class="text-lg sm:text-xl md:text-2xl text-gray-300 mb-8 sm:mb-12 max-w-2xl mx-auto font-light leading-relaxed px-4">
          The page you're looking for doesn't exist or has been moved.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center px-4">
          <a
            href="/"
            class="w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 bg-gradient-to-r from-pink-500 to-rose-600 text-white font-semibold rounded-full hover:scale-105 transition-transform duration-300 shadow-lg shadow-pink-500/30 text-center"
          >
            Return Home
          </a>
          <a
            href="mailto:sales@pantherdiamonds.com?subject=Ring%20required%2C%20need%20price%20quotation"
            class="w-full sm:w-auto px-6 sm:px-8 py-3 sm:py-4 border-2 border-pink-500 text-pink-400 font-semibold rounded-full hover:bg-pink-500/10 transition-colors duration-300 text-center"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>
